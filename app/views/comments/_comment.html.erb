<div class="media">
  <div class="media-body">
    <small>
      <%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago
    </small>
    <% if user_is_authorized_for_comment?(comment) %>
       | <%= link_to "Delete", [parent, comment], method: :delete %>
     <% end %>
    <p><%= comment.body %></p>
  </div>
</div>
