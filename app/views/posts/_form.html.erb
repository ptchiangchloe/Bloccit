<%= form_for [topic, post] do |f| %>
  <% if post.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(post.errors.count, "error") %></h4>
      <ul>
        <% post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_for [topic, post] do |f|%>
    <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, rows: 8, class: 'form_control', placeholder: "Enter the body"%>
  <% end %>

  <div class="form-group">
    <%= render partial: 'labels/form', locals: { f: f, labels: @post.labels } %>
  </div>

    <% f.submit "Save", class: 'btn btn-success'%>
  </div>
  <% end %>
