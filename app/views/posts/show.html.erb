<h1>
  <%= @post.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@post.created_at) %> ago by <%= @post.user.name %>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @post.body%></p>
  </div>
  <div>
    <% @post.comments.each do |comment| %>
      <%= render partial: 'comments/comment', locals: {comment: comment, parent: @post} %>
    <% end %>
  </div>
  <% if current_user %>
    <%= render 'comments/form', comment: Comment.new, parent: @post %>
  <% end %>
  <% if user_is_authorized_for_post?(@post) %>
    <div class="col-md-4">
      <%= link_to "Edit", edit_topic_post_path(@post.topic, @post), class: 'btn btn-success' %>
      <%= link_to "Delete Post", [@post.topic, @post], method: :delete, class: 'btn btn-danger',
      data: { confirm: 'Are you sure you want to delete this post?' } %>
    </div>
  <% end %>
</div>
